{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": ["ORIGIN", "PORT", "HOST"],
	"pipeline": {
		"build": {
			"outputs": [".svelte-kit/**", ".vercel/**"],
			"inputs": [
				"src/**",
				"vite.config.ts",
				"tailwind.config.ts",
				"svelte.config.js",
				"postcss.config.cjs"
			]
		},
		"lint": {},
		"test": {
			"outputs": ["playwright-report/**"],
			"inputs": ["tests/**", "src/main/**", "playwright.config.ts"],
			"env": ["CI"]
		},
		"check": {
			"dependsOn": ["sync", "generate"]
		},
		"sync": { "outputs": [".svelte-kit/**"] },
		"dev": {
			"cache": false,
			"persistent": true
		},
		"migrate": { "dependsOn": ["generate"] },
		"generate": {
			"inputs": ["src/lib/schema.server.ts"],
			"outputs": ["drizzle/**"]
		},
		"preview": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["build"]
		}
	}
}
